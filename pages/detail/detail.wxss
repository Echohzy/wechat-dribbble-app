.background-card{
    width: 100%;
}
.background-card image{
    display:block;
    width:100%;
    height:300px;
}
.user-info-block{
    width: 100%;
    height: auto;
    display: flex;
    flex-direction:column;
    justify-content: center;
}
.avatar{
   text-align:center;
}
.avatar image{
    border-radius: 40px;
    margin-top:-40px;
}
.name{
    text-align:center;
    margin-top:5px;
}
.info{
    display: flex;
    padding: 8px 30px;
    justify-content: space-around;
}
.info image{
    height: 16px;
    width:16px;
    margin-right: 4px;
}
.description{
    padding: 6px;
}
.comments{
    width: 100%;
}
.comments .title{
    font-size: 20px;
    margin: 16px 10px;
}
.comment-item{
    padding:6px 10px 10px;
   border-bottom: 1px solid #e2e6e6; 
}
.comment-user{
    display: flex;
    width: 100%;
    align-items: center;
    margin-bottom: 6px;
}
.comment-user image{
    height: 50px;
    width: 50px;
    border-radius: 25px;
    margin-right: 4px;
}
.comment-detail{
    margin-top: 6px;
}
.comment-detail image{
    height: 16px;
    width: 16px;
}
